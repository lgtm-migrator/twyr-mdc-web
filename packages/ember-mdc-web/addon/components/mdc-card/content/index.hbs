<div
	{{has-class-if
		@primaryAction
		'mdc-card__primary-action mdc-ripple-upgraded'
		'mdc-card__content'
	}}
	{{has-class-if
		(eq @direction 'horizontal')
		'flex flex-row'
		'flex flex-col'
	}}
	...attributes
>
	{{#if (has-block 'media')}}
		{{yield
			(component this.mediaComponent direction=@direction)
			to='media'
		}}
	{{/if}}
	{{#if (has-block 'text')}}
		<div
			{{has-class-if
				@primaryAction
				'mdc-card__primary-action-default'
				'mdc-card__content-default'
			}}
		>
			{{yield to='text'}}
		</div>
	{{/if}}
</div>