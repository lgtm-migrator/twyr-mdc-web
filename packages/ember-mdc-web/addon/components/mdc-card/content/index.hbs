<div
	{{has-class-if
		@primaryAction
		'mdc-card__primary-action mdc-ripple-upgraded'
		'mdc-card__content'
	}}
	{{has-class-if
		(eq @direction 'horizontal')
		'flex flex-row'
		'flex flex-col'
	}}
	{{has-class-if @primary 'mdc-theme--primary-bg mdc-theme--on-primary'}}
	{{has-class-if
		@secondary
		'mdc-theme--secondary-bg mdc-theme--on-secondary'
	}}
	{{has-class-if @error 'mdc-theme--error-bg mdc-theme--on-error'}}
	...attributes
>
	{{#if (has-block 'media')}}
		{{yield
			(component this.mediaComponent direction=@direction)
			to='media'
		}}
	{{/if}}
	{{#if (has-block 'text')}}
		<div
			{{has-class-if
				@primaryAction
				'mdc-card__primary-action-default'
				'mdc-card__content-default'
			}}
		>
			{{yield to='text'}}
		</div>
	{{/if}}
</div>