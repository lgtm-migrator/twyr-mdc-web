<div
	class='mdc-card__header'
	{{has-class-if @primary 'mdc-theme--primary-bg mdc-theme--on-primary'}}
	{{has-class-if
		@secondary
		'mdc-theme--secondary-bg mdc-theme--on-secondary'
	}}
	{{has-class-if @error 'mdc-theme--error-bg mdc-theme--on-error'}}
	...attributes
>
	{{#if (or (has-block 'headline') (has-block 'subheadline'))}}
		<article class='mdc-card__header--article'>
			{{#if (has-block 'headline')}}
				{{yield (component this.headlineComponent) to='headline'}}
			{{/if}}
			{{#if (has-block 'subheadline')}}
				{{yield (component this.subHeadlineComponent) to='subheadline'}}
			{{/if}}
		</article>
	{{/if}}
</div>