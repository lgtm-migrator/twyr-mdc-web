<div
	class='mdc-card'
	{{has-class-if @outline 'mdc-card--outlined'}}
	...attributes
>
	{{#if (has-block 'header')}}
		{{yield
			(component
				this.headerComponent
				primary=@primary
				secondary=@secondary
				error=@error
			)
			to='header'
		}}
	{{/if}}
	{{#if (has-block 'content')}}
		{{#if (has-block 'header')}}
			{{yield (component this.contentComponent) to='content'}}
		{{else}}
			{{yield
				(component
					this.contentComponent
					primary=@primary
					secondary=@secondary
					error=@error
				)
				to='content'
			}}
		{{/if}}
	{{/if}}
	{{#if (has-block 'footer')}}
		{{yield (component this.footerComponent) to='footer'}}
	{{/if}}
</div>