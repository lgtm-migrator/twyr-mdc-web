<div
	class='mdc-card'
	{{! Add styling classes as necessary }}
	{{has-class-if @outline 'mdc-card--outlined'}}
	{{! HTML attributes added in the calling template }}
	...attributes
>
	{{#if (has-block 'header')}}
		{{yield (component this.headerComponent palette=@palette) to='header'}}
	{{/if}}
	{{#if (has-block 'content')}}
		{{#if (has-block 'header')}}
			{{yield (component this.contentComponent) to='content'}}
		{{else}}
			{{yield
				(component this.contentComponent palette=@palette)
				to='content'
			}}
		{{/if}}
	{{/if}}
	{{#if (has-block 'footer')}}
		{{yield (component this.footerComponent) to='footer'}}
	{{/if}}
</div>