<div class='mdc-card' ...attributes>
	{{#if (has-block 'header')}}
		{{yield (component this.headerComponent) to='header'}}
	{{/if}}
	{{#if (has-block 'content')}}
		{{yield (component this.contentComponent) to='content'}}
	{{/if}}
	{{#if (has-block 'footer')}}
		{{yield (component this.footerComponent) to='footer'}}
	{{/if}}
</div>