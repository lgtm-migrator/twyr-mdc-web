{{! template-lint-disable require-presentational-children}}
{{! template-lint-disable no-inline-styles}}
{{! template-lint-disable style-concatenation}}
<div
	class='mdc-circular-progress'
	style='height:{{this.size}}px; width:{{this.size}}px;'
	{{! Ensure id is present - we need it for the events }}
	{{requires-id ignore=true}}
	{{! Accessibility stuff }}
	role='progressbar'
	aria-label={{this.label}}
	aria-valuemin='0'
	aria-valuemax='1'
	aria-valuenow={{this.displayValue}}
	{{! Re-calculate colours as necessary }}
	{{on-args-change this.recalcStyles @palette}}
	{{! Fire event as necessary }}
	{{on-args-change this.fireValueChangeEvent @progress}}
	{{! Store reference to the element for DOM manipulation }}
	{{store-element this.storeElement}}
	{{! HTML attributes added in the calling template }}
	...attributes
>
	<div class='mdc-circular-progress__determinate-container'>
		<svg
			class='mdc-circular-progress__determinate-circle-graphic'
			viewBox={{this.viewBox}}
			xmlns='http://www.w3.org/2000/svg'
		>
			<circle
				class='mdc-circular-progress__determinate-track'
				cx={{this.cxCy}}
				cy={{this.cxCy}}
				r={{this.radius}}
				stroke-width={{this.strokeWidth}}
			></circle>
			<circle
				class='mdc-circular-progress__determinate-circle'
				cx={{this.cxCy}}
				cy={{this.cxCy}}
				r={{this.radius}}
				stroke-dasharray={{this.strokeDashArray}}
				stroke-dashoffset={{this.strokeDashOffset}}
				stroke-width={{this.strokeWidth}}
			></circle>
		</svg>
	</div>
</div>