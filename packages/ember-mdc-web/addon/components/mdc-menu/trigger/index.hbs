{{! template-lint-disable no-invalid-interactive }}
<div
	class='ripple-container absolute inset-0 pointer-events-none overflow-hidden'
>
	<span class='mdc-list-item__ripple'></span>
</div>

{{#if (has-block 'icon')}}
	{{yield
		(component
			this.iconComponent
			disabled=this.disabled
			doubleLine=@doubleLine
			palette=@palette
		)
		to='icon'
	}}
{{/if}}

<span
	class='mdc-abstract-dropdown__trigger mdc-list-item__text'
	id='{{this.dropdownId}}-trigger'
	{{! Store reference to the element for DOM manipulation }}
	{{store-element this.storeElement}}
	{{! HTML attributes added in the calling template }}
	...attributes
	disabled={{this.disabled}}
>
	{{#if @doubleLine}}
		<span class='mdc-list-item__primary-text'>
			{{yield to='primaryText'}}
		</span>
		<span class='mdc-list-item__secondary-text'>
			{{yield to='secondaryText'}}
		</span>
	{{else}}
		{{#if (has-block 'icon')}}
			{{yield to='text'}}
		{{else}}
			{{yield}}
		{{/if}}
	{{/if}}
</span>