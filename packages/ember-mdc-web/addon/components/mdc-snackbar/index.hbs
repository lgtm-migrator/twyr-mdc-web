<aside
	class='mdc-snackbar'
	{{! Add styling classes as necessary }}
	{{has-class-if @open 'mdc-snackbar--open'}}
	{{has-class-if @stacked 'mdc-snackbar--stacked'}}
	{{! Re-calculate colours as necessary }}
	{{on-args-change this.recalcStyles @palette}}
>
	<div class='mdc-snackbar__surface' role='status' aria-relevant='additions'>
		<div class='mdc-snackbar__label' aria-atomic='false'>
			{{@text}}
		</div>
		{{#if (or @actionLabel @closeable)}}
			<div class='mdc-snackbar__actions' aria-atomic='true'>
				{{#if @actionLabel}}
					<button
						type='button'
						class='mdc-button mdc-snackbar__action'
						{{! React to clicks }}
						{{on 'click' this.onAction}}
						{{! Store reference to the element for DOM manipulation }}
						{{store-element this.storeElement}}
						{{! HTML attributes added in the calling template }}
						...attributes
					>
						<div class='mdc-button__ripple'></div>
						<span class='mdc-button__label'>{{@actionLabel}}</span>
					</button>
				{{/if}}

				{{#if @closeable}}
					<MdcIconButton
						class='mdc-snackbar__dismiss'
						@icon='close'
						@title='Dismiss'
						{{! React to clicks }}
						{{on 'click' this.onClose}}
					/>
				{{/if}}
			</div>
		{{/if}}
	</div>
</aside>