<button
	type='button'
	class='mdc-fab'
	{{has-class-if @mini 'mdc-fab--mini'}}
	{{has-class-if @extended 'mdc-fab--extended'}}
	{{! Tooltip stuff }}
	title={{@title}}
	{{! Re-calculate colours as necessary }}
	{{on-args-change this.recalcStyles @palette}}
	{{! Store reference to the element for DOM manipulation }}
	{{store-element this.storeElement}}
	...attributes
>
	<span class='mdc-fab__ripple'></span>
	{{#if @icon}}
		<MdcIcon @icon={{@icon}} class='mdc-fab__icon' />
	{{/if}}
	{{#if @extended}}
		<span class='mdc-fab__label'>{{yield}}</span>
	{{/if}}
</button>