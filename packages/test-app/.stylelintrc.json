{
	"extends": [
		"stylelint-config-hudochenkov/full",
		"stylelint-config-prettier"
	],
	"plugins": ["stylelint-order", "stylelint-prettier", "stylelint-scss"],
	"rules": {
		"custom-property-empty-line-before": null,
		"indentation": "tab",
		"prettier/prettier": true,
		"selector-max-type": 1,

		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"apply",
					"extends",
					"layer",
					"tailwind",
					"use",
					"include"
				]
			}
		],
		"scss/at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"apply",
					"extends",
					"layer",
					"tailwind",
					"use",
					"include"
				]
			}
		],

		"order/order": [
			[
				"dollar-variables",
				"custom-properties",
				"at-rules",
				"declarations"
			],
			{
				"severity": "warning"
			}
		]
	}
}
