{{page-title 'Home'}}
<div class='w-full h-full p-5 flex flex-row justify-center items-center'>
	<MdcCard
		class='w-full max-w-full max-h-full'
		@outlined={{this.cardOutlined}}
	>
		<:header as |Header|>
			<Header class='flex flex-row justify-between items-center border-b'>
				<:headline as |Headline|>
					<Headline
						@text='The Component Collection (most of them, anyway)'
					/>
				</:headline>
				<:subheadline as |SubHeadline|>
					<SubHeadline
						@text='The Ember Edition of Material Design Component for the Web'
					/>
				</:subheadline>
				<:default>
					<MdcSelect
						class='mx-2'
						@outlined={{true}}
						@fullWidth={{true}}
						@allowEmpty={{true}}
						@label='Palette'
						@leadingIcon='palette'
						@palette={{this.palette}}
						{{on 'change' this.paletteSelectionChange}}
						required
					>
						<:trigger as |Trigger|>
							<Trigger>Hello, world</Trigger>
						</:trigger>

						<:optionlist as |OptionList|>
							<OptionList as |Options|>
								<Options.Option
									value='primary'
									selected={{(eq this.palette 'primary')}}
								>Primary</Options.Option>
								<Options.Option
									value='secondary'
									selected={{(eq this.palette 'secondary')}}
								>Secondary</Options.Option>
								<Options.Option
									value='error'
									selected={{(eq this.palette 'error')}}
								>Error</Options.Option>
							</OptionList>
						</:optionlist>
					</MdcSelect>

					<MdcRadioGroup
						class='flex flex-row justify-center items-center'
						@groupName='Card Style'
						@palette={{this.palette}}
						as |RadioGroup|
					>
						<RadioGroup.Radio
							{{on
								'change'
								(fn
									(mut this.cardOutlined)
									(not this.cardOutlined)
								)
							}}
							checked={{this.cardOutlined}}
						>
							Outlined
						</RadioGroup.Radio>

						<RadioGroup.Radio
							{{on
								'change'
								(fn
									(mut this.cardOutlined)
									(not this.cardOutlined)
								)
							}}
							checked={{(not this.cardOutlined)}}
						>
							Raised
						</RadioGroup.Radio>
					</MdcRadioGroup>
				</:default>
			</Header>
		</:header>
		<:content as |Content|>
			<Content class='overflow-auto'>
				<MdcBanner
					@text='This is a banner message'
					@icon='crowd'
					@primaryActionLabel='Hello'
					@secondaryActionLabel='World'
					@palette={{this.palette}}
					{{store-element this.bannerInitialized}}
				/>

				<div
					class='flex flex-row flex-wrap justify-start items-center m-2'
				>
					<MdcMenuBar @palette={{this.palette}} as |MenuBar|>
						<MenuBar.Menu>
							<:trigger as |Trigger|>
								<Trigger>
									This
								</Trigger>
							</:trigger>
						</MenuBar.Menu>
						<MenuBar.Menu>
							<:trigger as |Trigger|>
								<Trigger>
									<:icon as |Icon|>
										<Icon @icon='thumb-up' />
									</:icon>
									<:text>
										Is
									</:text>
								</Trigger>
							</:trigger>
							<:items as |Items|>
								<Items as |List|>
									<List.Item>Item 2.1</List.Item>
									<List.Item>Item 2.2</List.Item>
									<List.Item>Item 2.3</List.Item>
								</Items>
							</:items>
						</MenuBar.Menu>
						<MenuBar.Menu open>
							<:trigger as |Trigger|>
								<Trigger>
									<:icon as |Icon|>
										<Icon @icon='arrow-up' />
									</:icon>
									<:text>
										The
									</:text>
								</Trigger>
							</:trigger>
							<:items as |Items|>
								<Items as |List|>
									<List.Item>Item 3.1</List.Item>
									<List.Item>Item 3.2</List.Item>
								</Items>
							</:items>
						</MenuBar.Menu>
						<MenuBar.Menu>
							<:trigger as |Trigger|>
								<Trigger>
									First
								</Trigger>
							</:trigger>
						</MenuBar.Menu>
						<MenuBar.Menu>
							<:trigger as |Trigger|>
								<Trigger>
									<:icon as |Icon|>
										<Icon @icon='crowd' />
									</:icon>
									<:text>
										Menu
									</:text>
								</Trigger>
							</:trigger>
							<:items as |Items|>
								<Items as |List|>
									<List.Item>Item 5.1</List.Item>
									<List.Item>Item 5.2</List.Item>
									<List.Item>Item 5.3</List.Item>
									<List.Item>Item 5.4</List.Item>
									<List.Item>Item 5.5</List.Item>
								</Items>
							</:items>
						</MenuBar.Menu>
					</MdcMenuBar>
				</div>

				<div
					class='flex flex-row flex-wrap justify-around items-center m-2'
				>
					<MdcTextField
						class='mr-2'
						@outlined={{true}}
						@fullWidth={{false}}
						@label='Hello, world'
						@palette={{this.palette}}
						@status='Testing the text field'
						@statusBar={{true}}
						@leadingIcon='crowd'
						@trailingIcon='thumb-up'
						maxlength='20'
						value='Yoo, hoo, hoo'
						required
					/>

					<MdcCheckbox
						@palette={{this.palette}}
						{{on 'change' this.processCheckboxEvent}}
						checked
					>
						Checkbox
					</MdcCheckbox>

					<MdcSwitch
						@palette={{this.palette}}
						@selectedLabel='On'
						@unselectedLabel='Off'
						{{on 'statuschange' this.processSwitchEvent}}
						selected
					/>

					<MdcChipSet @palette={{this.palette}} as |Chipset|>
						<Chipset.Chip
							@icon='abacus'
							@closeable={{true}}
							{{on 'close' this.closeChip}}
						>
							Hello
						</Chipset.Chip>
						<Chipset.Chip @icon='crowd'>World</Chipset.Chip>
					</MdcChipSet>

					<MdcSegmentedButton
						@palette={{this.palette}}
						@singleSelect={{false}}
						{{on 'select' this.onButtonGroupSelectionChange}}
						as |SegmentedButton|
					>
						<SegmentedButton.Segment
							@icon='format-bold'
							@text='Bold'
						/>
						<SegmentedButton.Segment
							@icon='format-italic'
							@text='Italic'
						/>
						<SegmentedButton.Segment
							@icon='format-underline'
							@text='Underline'
							selected
						/>
					</MdcSegmentedButton>

					<MdcCircularProgress
						@size='4'
						@minValue='0'
						@maxValue='100'
						@progress={{this.progress}}
						@palette={{this.palette}}
					/>
				</div>

				<div class='m-2'>
					<MdcSlider
						class='w-full'
						@discrete={{true}}
						@tickMarks={{true}}
						@step='5'
						@minValue='0'
						@maxValue='100'
						@value={{this.sliderValue}}
						@palette={{this.palette}}
						{{on 'statuschange' this.processSliderEvent}}
					/>
				</div>

				<div
					class='flex flex-row flex-wrap justify-around items-center m-2'
				>
					<MdcLinearProgress
						@minValue='0'
						@maxValue='100'
						@bufferedValue={{this.bufferValue}}
						@indeterminate={{false}}
						@progress={{this.progress}}
						@palette={{this.palette}}
					/>
				</div>
				<div
					class='flex flex-row flex-wrap justify-around items-center mt-10'
				>
					<MdcButton
						@leadingIcon='human-greeting'
						@trailingIcon='blur'
						@palette={{this.palette}}
					>
						Button
					</MdcButton>

					<MdcButton
						@leadingIcon='human-greeting'
						@trailingIcon='blur'
						@palette={{this.palette}}
						@shape='rounded'
					>
						Button
					</MdcButton>

					<MdcButton
						@leadingIcon='human-greeting'
						@trailingIcon='blur'
						@palette={{this.palette}}
						@style='outlined'
					>
						Button
					</MdcButton>

					<MdcButton
						@leadingIcon='human-greeting'
						@trailingIcon='blur'
						@palette={{this.palette}}
						@style='outlined'
						@shape='rounded'
					>
						Button
					</MdcButton>

					<MdcButton
						@leadingIcon='human-greeting'
						@trailingIcon='blur'
						@palette={{this.palette}}
						@style='flat'
					>
						Button
					</MdcButton>

					<MdcButton
						@leadingIcon='human-greeting'
						@trailingIcon='blur'
						@palette={{this.palette}}
						@style='flat'
						@shape='rounded'
					>
						Button
					</MdcButton>

					<MdcButton
						@leadingIcon='human-greeting'
						@trailingIcon='blur'
						@palette={{this.palette}}
						@style='raised'
					>
						Button
					</MdcButton>

					<MdcButton
						@leadingIcon='human-greeting'
						@trailingIcon='blur'
						@palette={{this.palette}}
						@style='raised'
						@shape='rounded'
					>
						Button
					</MdcButton>
				</div>
				<div
					class='flex flex-row flex-wrap justify-around items-center m-2 pb-12'
				>
					<MdcIconButton @icon='blur' @palette={{this.palette}} />

					<MdcFab @icon='blur' @palette={{this.palette}} />

					<MdcFab
						@icon='blur'
						@mini={{true}}
						@palette={{this.palette}}
					/>

					<MdcFab
						@icon='blur'
						@extended={{true}}
						@palette={{this.palette}}
						@text='Button'
					/>

					<MdcFab
						@icon='blur'
						@mini={{true}}
						@extended={{true}}
						@palette={{this.palette}}
						@text='Button'
					/>
				</div>

				<div
					class='flex flex-row flex-wrap justify-around items-center m-2'
				>
					<MdcTabBar
						class='my-4'
						@fill={{false}}
						@align='center'
						@indicatorLength='full'
						@selectedTabIndicator='underline'
						@indicatorIcon='thumb-up'
						@transitionType='fade'
						@palette={{this.palette}}
						as |TabBar|
					>
						<TabBar.Tab @icon='crowd' @text='Tab #1' />
						<TabBar.Tab @icon='crowd' @text='Tab #2' selected />
						<TabBar.Tab @icon='crowd' @text='Tab #3' />
						<TabBar.Tab @icon='crowd' @text='Tab #4' />
						<TabBar.Tab @icon='crowd' @text='Tab #5' />
						<TabBar.Tab @icon='crowd' @text='Tab #6' />
						<TabBar.Tab @icon='crowd' @text='Tab #7' />
						<TabBar.Tab @icon='crowd' @text='Tab #8' />
						<TabBar.Tab @icon='crowd' @text='Tab #9' />
						<TabBar.Tab @icon='crowd' @text='Tab #10' />
						<TabBar.Tab @icon='crowd' @text='Tab #11' />
						<TabBar.Tab @icon='crowd' @text='Tab #12' />
						<TabBar.Tab @icon='crowd' @text='Tab #13' />
						<TabBar.Tab @icon='crowd' @text='Tab #14' />
						<TabBar.Tab @icon='crowd' @text='Tab #15' />
						<TabBar.Tab @icon='crowd' @text='Tab #16' />
					</MdcTabBar>
				</div>
			</Content>
		</:content>
	</MdcCard>
</div>