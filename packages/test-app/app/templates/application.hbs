{{! template-lint-disable no-inline-styles }}
{{page-title 'Ember Material Components for the Web'}}
<MdcTopAppBar @fixed={{true}} @palette={{this.palette}}>
	<:navigationIcon as |NavIcon|>
		<NavIcon
			@icon='menu'
			{{store-element this.storeNavigationIconElement}}
		/>
	</:navigationIcon>

	<:title>Ember Material Components for the Web</:title>
</MdcTopAppBar>

<MdcDrawer
	class='mdc-top-app-bar--fixed-adjust'
	@modal={{false}}
	@locked={{true}}
	@open={{true}}
	@controlElement={{this.navIconElement}}
>
	<:header as |Header|>
		<Header>
			<:headline as |Headline|>
				<Headline @text='Material Web' />
			</:headline>
			<:subheadline as |Subheadline|>
				<Subheadline @text='Documentation' />
			</:subheadline>
		</Header>
	</:header>

	<:content>
		<MdcListGroup
			@doubleLine={{true}}
			@palette={{this.palette}}
			@shaped={{true}}
			{{on 'select' this.processListGroupEvent}}
			as |ListGroup|
		>
			<ListGroup.Header>
				List Group #1
			</ListGroup.Header>
			<ListGroup.List as |List|>
				<List.Item>
					<:primaryText>Home</:primaryText>
					<:secondaryText>Home, sweet home</:secondaryText>

					<:default>Home</:default>

					<:meta>
						<MdcIcon @icon='crowd' />
					</:meta>
				</List.Item>

				<List.Item>
					<:primaryText>Rome</:primaryText>
					<:secondaryText>Rome, sweet rome</:secondaryText>
					<:default>Rome</:default>
				</List.Item>
				<List.Divider />
			</ListGroup.List>

			<ListGroup.Header>
				List Group #2
			</ListGroup.Header>
			<ListGroup.List as |List|>
				<List.Item>
					<:primaryText>Home</:primaryText>
					<:secondaryText>Home, sweet home</:secondaryText>

					<:default>Home</:default>

					<:meta>
						<MdcIcon @icon='crowd' />
					</:meta>
				</List.Item>

				<List.Item>
					<:primaryText>Rome</:primaryText>
					<:secondaryText>Rome, sweet rome</:secondaryText>
					<:default>Rome</:default>
				</List.Item>
				<List.Divider />
			</ListGroup.List>
		</MdcListGroup>
	</:content>
</MdcDrawer>

<div
	class='mdc-drawer-app-content mdc-top-app-bar--fixed-adjust mdc-theme--surface'
>
	<MdcCheckbox
		@palette={{this.palette}}
		{{on 'statuschange' this.processCheckboxEvent}}
		checked
	>
		Checkbox
	</MdcCheckbox>

	<MdcRadioGroup
		@groupName='Test Group 1'
		@palette={{this.palette}}
		{{on 'statuschange' this.processRadioGroupEvent}}
		as |RadioGroup|
	>
		<RadioGroup.Radio>
			Radio 1
		</RadioGroup.Radio>

		<RadioGroup.Radio checked>
			Radio 2
		</RadioGroup.Radio>
	</MdcRadioGroup>

	<MdcSwitch
		@palette={{this.palette}}
		@selectedLabel='On'
		@unselectedLabel='Off'
		{{on 'statuschange' this.processSwitchEvent}}
	/>

	<MdcChipSet @palette={{this.palette}} as |Chipset|>
		<Chipset.Chip
			@icon='abacus'
			@closeable={{true}}
			{{on 'close' this.closeChip}}
		>
			Hello
		</Chipset.Chip>
		<Chipset.Chip @icon='crowd'>World</Chipset.Chip>
	</MdcChipSet>

	<MdcSegmentedButton
		@palette={{this.palette}}
		@singleSelect={{true}}
		{{on 'select' this.onButtonGroupSelectionChange}}
		as |SegmentedButton|
	>
		<SegmentedButton.Segment @icon='format-bold' @label='Bold' />
		<SegmentedButton.Segment @icon='format-italic' @label='Italic' />
		<SegmentedButton.Segment @icon='format-underline' @label='Underline' />
	</MdcSegmentedButton>

	<MdcCircularProgress
		@size='3'
		@minValue='0'
		@maxValue='100'
		@progress={{this.progress}}
		@palette={{this.palette}}
	/>

	<MdcLinearProgress
		@minValue='0'
		@maxValue='100'
		@bufferedValue={{this.bufferValue}}
		@indeterminate={{false}}
		@progress={{this.progress}}
		@palette={{this.palette}}
	/>
	{{outlet}}
</div>

<MdcSnackbar
	@palette={{this.palette}}
	{{on 'init' this.setAlertControls}}
	{{on 'alert' this.processAlertDisplay}}
	{{on 'action' this.processAlertAction}}
	{{on 'close' this.processAlertClose}}
/>