{{! template-lint-disable no-inline-styles }}
{{page-title 'Ember Material Components for the Web'}}
<MdcTopAppBar @fixed={{true}} @palette={{this.palette}}>
	<:navigationIcon>
		<MdcDrawer::Control
			@icon='chevron-triple-right'
			@toggledIcon='chevron-triple-left'
			@palette={{this.palette}}
			@textColour='on-{{this.palette}}'
			{{on 'init' this.storeNavigationIconControls}}
		/>
	</:navigationIcon>

	<:title>Ember Material Components for the Web</:title>
</MdcTopAppBar>

<MdcDrawer
	class='mdc-top-app-bar--fixed-adjust'
	@modal={{true}}
	@locked={{false}}
	@open={{true}}
	@name='Main Sidebar'
	{{on 'register' (fn this.registerDrawer true)}}
	{{on 'unregister' (fn this.registerDrawer false)}}
	{{on 'statuschange' this.drawerStatusChange}}
>
	<:header as |Header|>
		<Header>
			<:headline as |Headline|>
				<Headline @text='Material Web' />
			</:headline>
			<:subheadline as |Subheadline|>
				<Subheadline @text='Documentation' />
			</:subheadline>
		</Header>
	</:header>

	<:content>
		<MdcListGroup
			@doubleLine={{true}}
			@palette={{this.palette}}
			@shaped={{true}}
			{{on 'select' this.processListGroupEvent}}
			as |ListGroup|
		>
			<ListGroup.Header>
				List Group #1
			</ListGroup.Header>
			<ListGroup.List as |List|>
				<List.Item>
					<:primaryText>Home</:primaryText>
					<:secondaryText>Home, sweet home</:secondaryText>

					<:default>Home</:default>

					<:meta>
						<MdcIcon @icon='crowd' />
					</:meta>
				</List.Item>

				<List.Item>
					<:primaryText>Rome</:primaryText>
					<:secondaryText>Rome, sweet rome</:secondaryText>
					<:default>Rome</:default>
				</List.Item>
				<List.Divider />
			</ListGroup.List>

			<ListGroup.Header>
				List Group #2
			</ListGroup.Header>
			<ListGroup.List as |List|>
				<List.Item>
					<:primaryText>Home</:primaryText>
					<:secondaryText>Home, sweet home</:secondaryText>

					<:default>Home</:default>

					<:meta>
						<MdcIcon @icon='crowd' />
					</:meta>
				</List.Item>

				<List.Item>
					<:primaryText>Rome</:primaryText>
					<:secondaryText>Rome, sweet rome</:secondaryText>
					<:default>Rome</:default>
				</List.Item>
				<List.Divider />
			</ListGroup.List>
		</MdcListGroup>
	</:content>
</MdcDrawer>

<div
	class='mdc-drawer-app-content mdc-top-app-bar--fixed-adjust mdc-theme--surface'
>
	<MdcBanner
		@text='This is a banner message'
		@icon='crowd'
		@primaryActionLabel='Hello'
		@secondaryActionLabel='World'
		@palette={{this.palette}}
		{{on 'init' this.storeBannerControls}}
		{{on 'statuschange' this.processBannerEvent}}
		{{on 'primaryAction' this.processBannerEvent}}
		{{on 'secondaryAction' this.processBannerEvent}}
	/>

	<div class='flex flex-row justify-around items-center m-2'>
		<MdcTabBar
			class='my-4'
			@fill={{false}}
			@align='center'
			@indicatorLength='full'
			@selectedTabIndicator='underline'
			@indicatorIcon='thumb-up'
			@transitionType='fade'
			@palette={{this.palette}}
			as |TabBar|
		>
			<TabBar.Tab @icon='crowd' @text='Tab #1' />
			<TabBar.Tab @icon='crowd' @text='Tab #2' selected />
			<TabBar.Tab @icon='crowd' @text='Tab #3' />
			<TabBar.Tab @icon='crowd' @text='Tab #4' />
			<TabBar.Tab @icon='crowd' @text='Tab #5' />
			<TabBar.Tab @icon='crowd' @text='Tab #6' />
			<TabBar.Tab @icon='crowd' @text='Tab #7' />
			<TabBar.Tab @icon='crowd' @text='Tab #8' />
			<TabBar.Tab @icon='crowd' @text='Tab #9' />
			<TabBar.Tab @icon='crowd' @text='Tab #10' />
			<TabBar.Tab @icon='crowd' @text='Tab #11' />
			<TabBar.Tab @icon='crowd' @text='Tab #12' />
			<TabBar.Tab @icon='crowd' @text='Tab #13' />
			<TabBar.Tab @icon='crowd' @text='Tab #14' />
			<TabBar.Tab @icon='crowd' @text='Tab #15' />
			<TabBar.Tab @icon='crowd' @text='Tab #16' />
		</MdcTabBar>
	</div>

	<div class='flex flex-row justify-around items-center m-2'>
		<MdcCheckbox
			@palette={{this.palette}}
			{{on 'change' this.processCheckboxEvent}}
		>
			Checkbox
		</MdcCheckbox>

		<MdcRadioGroup
			@groupName='Test Group 1'
			@palette={{this.palette}}
			as |RadioGroup|
		>
			<RadioGroup.Radio {{on 'change' this.processRadioGroupEvent}}>
				Radio 1
			</RadioGroup.Radio>

			<RadioGroup.Radio
				{{on 'change' this.processRadioGroupEvent}}
				checked
			>
				Radio 2
			</RadioGroup.Radio>
		</MdcRadioGroup>

		<MdcSwitch
			@palette={{this.palette}}
			@selectedLabel='On'
			@unselectedLabel='Off'
			{{on 'statuschange' this.processSwitchEvent}}
			selected
		/>

		<MdcChipSet @palette={{this.palette}} as |Chipset|>
			<Chipset.Chip
				@icon='abacus'
				@closeable={{true}}
				{{on 'close' this.closeChip}}
			>
				Hello
			</Chipset.Chip>
			<Chipset.Chip @icon='crowd'>World</Chipset.Chip>
		</MdcChipSet>

		<MdcSegmentedButton
			@palette={{this.palette}}
			@singleSelect={{false}}
			{{on 'select' this.onButtonGroupSelectionChange}}
			as |SegmentedButton|
		>
			<SegmentedButton.Segment @icon='format-bold' @text='Bold' />
			<SegmentedButton.Segment @icon='format-italic' @text='Italic' />
			<SegmentedButton.Segment
				@icon='format-underline'
				@text='Underline'
			/>
		</MdcSegmentedButton>
	</div>

	<div class='m-2'>
		<MdcSlider
			@discrete={{true}}
			@tickMarks={{true}}
			@step='5'
			@minValue='0'
			@maxValue='100'
			@value={{this.sliderValue}}
			@palette={{this.palette}}
			{{on 'statuschange' this.processSliderEvent}}
		/>
	</div>

	<div class='flex flex-row justify-around items-center m-2'>
		<MdcLinearProgress
			@minValue='0'
			@maxValue='100'
			@bufferedValue={{this.bufferValue}}
			@indeterminate={{false}}
			@progress={{this.progress}}
			@palette={{this.palette}}
		/>

		<MdcCircularProgress
			@size='8'
			@minValue='0'
			@maxValue='100'
			@progress={{this.progress}}
			@palette={{this.palette}}
		/>
	</div>

	<div class='flex flex-row justify-start items-center m-2'>
		<MdcTextField
			@outlined={{true}}
			@fullWidth={{false}}
			@label='Hello, world'
			@palette={{this.palette}}
			@status='Testing the text field'
			@leadingIcon='crowd'
			@trailingIcon='thumb-up'
			maxlength='20'
			value='Yoo, hoo, hoo'
			required
		/>

		<MdcMenu @palette={{this.palette}} as |Menu|>
			<Menu.Item>This</Menu.Item>
			<Menu.Item>
				<:trigger as |Trigger|>
					<Trigger>
						<:icon as |Icon|>
							<Icon @icon='thumb-up' />
						</:icon>
						<:text>
							Is
						</:text>
					</Trigger>
				</:trigger>
				<:items as |Items|>
					<Items>
						<span>This is the first Menu Item</span>
					</Items>
				</:items>
			</Menu.Item>
			<Menu.Item>The</Menu.Item>
			<Menu.Item>First</Menu.Item>
			<Menu.Item>
				<:trigger as |Trigger|>
					<Trigger>Menu</Trigger>
				</:trigger>
				<:items as |Items|>
					<Items>
						<span>This is the second Menu Item</span>
					</Items>
				</:items>
			</Menu.Item>
		</MdcMenu>
	</div>
	{{outlet}}
</div>

<MdcSnackbar
	@palette={{this.palette}}
	{{on 'init' this.setAlertControls}}
	{{on 'alert' this.processAlertDisplay}}
	{{on 'action' this.processAlertAction}}
	{{on 'close' this.processAlertClose}}
/>