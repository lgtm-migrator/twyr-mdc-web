{{! template-lint-disable no-inline-styles }}
{{page-title 'Ember Material Components for the Web'}}
<div id='mdc-abstract-dropdown--content-container'></div>
<MdcTopAppBar @fixed={{true}} @palette={{this.palette}}>
	<:navigationIcon>
		<MdcDrawer::Control
			@icon='chevron-triple-right'
			@toggledIcon='chevron-triple-left'
			@palette={{this.palette}}
			@textColour='on-{{this.palette}}'
			{{on 'init' this.storeNavigationIconControls}}
		/>
	</:navigationIcon>

	<:title>Ember Material Components for the Web</:title>

	<:actionIcons>
		<MdcMenu @palette={{this.palette}} @xAlign='right'>
			<:trigger as |Trigger|>
				<Trigger>
					<MdcIcon
						class='text-3xl text-white'
						@icon='menu'
						@palette={{this.palette}}
					/>
				</Trigger>
			</:trigger>
			<:items as |Items|>
				<Items as |MenuItems|>
					<MenuItems.Item>Single Menu 1</MenuItems.Item>
					<MenuItems.Item>Single Menu 2</MenuItems.Item>
					<MenuItems.Divider />
					<MenuItems.Item>Single Menu 3</MenuItems.Item>
				</Items>
			</:items>
		</MdcMenu>
	</:actionIcons>
</MdcTopAppBar>

<MdcDrawer
	class='mdc-top-app-bar--fixed-adjust'
	@modal={{false}}
	@locked={{true}}
	@open={{true}}
	@name='Main Sidebar'
	{{on 'register' (fn this.registerDrawer true)}}
	{{on 'unregister' (fn this.registerDrawer false)}}
	{{on 'statuschange' this.drawerStatusChange}}
>
	<:header as |Header|>
		<Header>
			<:headline as |Headline|>
				<Headline @text='Material Web' />
			</:headline>
			<:subheadline as |Subheadline|>
				<Subheadline @text='Documentation' />
			</:subheadline>
		</Header>
	</:header>

	<:content>
		<MdcListGroup
			@doubleLine={{true}}
			@palette={{this.palette}}
			@shaped={{true}}
			{{on 'select' this.processListGroupEvent}}
			as |ListGroup|
		>
			<ListGroup.Header>
				List Group #1
			</ListGroup.Header>
			<ListGroup.List as |List|>
				<List.Item>
					<:primaryText>Home</:primaryText>
					<:secondaryText>Home, sweet home</:secondaryText>

					<:default>Home</:default>

					<:meta>
						<MdcIcon @icon='crowd' />
					</:meta>
				</List.Item>

				<List.Item>
					<:primaryText>Rome</:primaryText>
					<:secondaryText>Rome, sweet rome</:secondaryText>
					<:default>Rome</:default>
				</List.Item>
				<List.Divider />
			</ListGroup.List>

			<ListGroup.Header>
				List Group #2
			</ListGroup.Header>
			<ListGroup.List as |List|>
				<List.Item>
					<:primaryText>Home</:primaryText>
					<:secondaryText>Home, sweet home</:secondaryText>

					<:default>Home</:default>

					<:meta>
						<MdcIcon @icon='crowd' />
					</:meta>
				</List.Item>

				<List.Item>
					<:primaryText>Rome</:primaryText>
					<:secondaryText>Rome, sweet rome</:secondaryText>
					<:default>Rome</:default>
				</List.Item>
				<List.Divider />
			</ListGroup.List>
		</MdcListGroup>
	</:content>
</MdcDrawer>

<div
	class='mdc-drawer-app-content mdc-top-app-bar--fixed-adjust mdc-theme--surface'
>
	{{outlet}}
</div>

<MdcSnackbar
	@palette={{this.palette}}
	{{store-element this.snackBarInitialized}}
/>