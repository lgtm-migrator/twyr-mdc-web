{{page-title 'Ember MDC Web'}}
<MdcCard class='w-1/3'>
	<:header as |Header|>
		<Header>
			<:headline as |Headline|>
				<Headline @text='Material Design Components for the Web' />
			</:headline>
			<:subheadline as |SubHeadline|>
				<SubHeadline @text='Ember 4.0+ Addon for MDC Web 13.0+' />
			</:subheadline>
		</Header>
	</:header>
	<:content as |Content|>
		<Content @direction='vertical'>
			<:media as |Media|>
				<Media
					class='mdc-theme--text-primary-on-dark min-w-[30%]'
					@src='https://material-components.github.io/material-components-web-catalog/static/media/photos/3x2/2.jpg'
				>
					<MdcHeadline>Yoo, hoo</MdcHeadline>
					<MdcSubHeadline>Woo, yes</MdcSubHeadline>
				</Media>
			</:media>
			<:text>
				<span class='mdc-theme--text-secondary-on-light'>
					Its another Tequila Sunrise
				</span>
			</:text>
		</Content>
	</:content>
	<:footer as |Footer|>
		<Footer />
	</:footer>
</MdcCard>